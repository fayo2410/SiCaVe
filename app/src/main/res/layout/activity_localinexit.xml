<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_localinexit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sicave.sicave.localinexit">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:id="@+id/dato"
        android:hint="ID"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/dato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/cajon"
        android:textAlignment="center"
        android:hint="CAJÃ“N" />

    <Button
        android:text="ENTRADA"
        android:layout_height="wrap_content"
        android:id="@+id/btentrar"
        android:background="#02943e"
        android:textColor="#feed02"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_below="@+id/cajon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="btnentrar" />

    <Button
        android:text="SALIDA"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="#02943e"
        android:textColor="#feed02"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_marginTop="32dp"
        android:onClick="btnsalida"
        android:layout_below="@+id/btentrar"
        android:layout_alignLeft="@+id/btentrar"
        android:layout_alignStart="@+id/btentrar" />

</RelativeLayout>
